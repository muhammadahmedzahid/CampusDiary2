<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".DiaryActivity">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/colorAccent"></androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/dates"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#E1CFCECE"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Today"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/specificDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_views_student"
        android:elevation="10dp"

        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/redCircle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/circular_red_shape"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/robotoregular"
            android:text="12:06 AM"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/diaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Math"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/robotoregular"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/diaryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#95000000"
        android:text="from chapter 1 to 4 it should be on computer you should make up to the mark if you want to get position in board"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/robotoregular"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        android:layout_marginBottom="15dp"
        />
</LinearLayout>

</LinearLayout>